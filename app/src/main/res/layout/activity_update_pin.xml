<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdatePinActivity">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back button"
        android:src="@drawable/ic_arrow_back" />

    <TextView
        android:id="@+id/update_pin_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Update PIN code"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/enter_pin_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_pin_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Enter your PIN"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:id="@+id/enter_pin_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/enter_pin_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/enter_pin_dot_1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty" />

        <View
            android:id="@+id/enter_pin_dot_2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty" />

        <View
            android:id="@+id/enter_pin_dot_3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty" />

        <View
            android:id="@+id/enter_pin_dot_4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty" />
    </LinearLayout>

    <EditText
        android:id="@+id/enter_pin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/enter_pin_layout"
        android:layout_centerHorizontal="true"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:visibility="gone" />

    <TextView
        android:id="@+id/retype_pin_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/enter_pin_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Re type your PIN again."
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:id="@+id/retype_pin_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/retype_pin_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/retype_pin_dot_1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty" />

        <View
            android:id="@+id/retype_pin_dot_2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty" />

        <View
            android:id="@+id/retype_pin_dot_3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty" />

        <View
            android:id="@+id/retype_pin_dot_4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty" />
    </LinearLayout>

    <EditText
        android:id="@+id/retype_pin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/retype_pin_layout"
        android:layout_centerHorizontal="true"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:visibility="gone" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/retype_pin_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Confirm" />
</RelativeLayout>
